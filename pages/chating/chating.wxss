.small-map-wrapper {
  overflow: hidden;
  width: 452rpx;
  height:300rpx;
  position:relative;
  border-radius:8rpx;
}
.self .small-map-wrapper {
  margin-right: 20rpx;
}
.other .small-map-wrapper {
  margin-left: 20rpx;
}
.small-map-wrapper .small-geo-img {
  width: 100%;
  height: 100%;
  background-color: pink;
}
.small-map-wrapper .text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx;
  min-height: 70rpx;
  /* line-height: 70rpx; */
  opacity: 0.75;
  font-size: 28rpx;
  /* white-space: nowrap; */
  text-align: center;
  text-overflow: ellipsis;
  background-color:#444;
  color:#fff;
}

.small-video-wrapper {
  margin-left: 20rpx;
  margin-right: 20rpx;
  width:200rpx;
  height:200rpx;
  padding:10rpx;
  background-color:#fff;
  border-radius:20rpx;
  display:flex;
  justify-content:center;
  flex-direction:column;
  align-items:center;
}
.small-video-wrapper .video {
  max-width:200px;
  max-height:300px;
}

.audio-wrapper {
  background-color:#fff;
  border-radius:8rpx;
  display:flex;
  justify-content:space-between;
  padding:0 20rpx;
  min-width: 30%;
  box-sizing:border-box;
  margin-left:-2px;
}
.audio-wrapper .image {
  width:23rpx;
  height:30rpx;
  align-self:center;
}
.audio-wrapper .text {
  align-self:center;
  color:#fff;
}


.self .record-chatting-item-text,
.self .audio-wrapper,
.self .tfim-winchart-content{
  margin-right: 20rpx;
  margin-left: 0;
}
.other .record-chatting-item-text,
.other .audio-wrapper,
.other .tfim-winchart-content{
  margin-left: 20rpx;
  margin-right: 0;
}

/*发送按钮*/
.chatinput-sendbtn {
  display: block;
  margin: 20rpx 18rpx;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fefefe;
  font-size: 28rpx;
  background: #ff7500;
  border-radius: 60rpx;
}
button::after{
  border: none;
}

.w500{width: 500rpx;}
.w430{width: 430rpx;}
.record-chatting-item-unread{
  align-self: flex-end;
  margin-right: 8rpx;
  font-size: 20rpx;
  color: #888888;
  vertical-align: bottom;
}

/*自定义卡片样式*/
.tfimline1 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tfim_line2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tfim-winchart-content {
  position: relative;
  padding: 16rpx 12rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  word-break: break-all;
  word-wrap: break-word;
  background-color: #fff;
  font-size: 14rpx;
  color: #212121;
  max-width: 750px;
}
.tfim-winchart-content-text {
  max-width: 230rpx;
  min-height: 24rpx;
  line-height: 24rpx;
  white-space: normal;
  word-break: break-all;
}

.tfim-winchart-content-card-l {
  width: 179rpx;
  height: 133rpx;
  float: left;
}
.tfim-winchart-content-card-l image {
  width: 100%;
  height: 100%;
}
.tfim-winchart-content-card-r {
  width: 320rpx;
  float: left;
  margin-left: 25rpx;
}
.tfim-winchart-content-card-title {
  font-size: 26rpx;
  color: #212121;
  line-height: 34rpx;
  max-height: 68rpx;
  overflow: hidden;
}
.tfim-winchart-content-card-place {
  font-size: 22rpx;
  color: #8a8a8a;
  height: 24rpx;
  line-height: 24rpx;
  margin-top: 4rpx;
}
.tfim-winchart-content-card-price {
  font-size: 22rpx;
  color: #ff7500;
  margin-top: 4rpx;
}
.tfim-winchart-content-card-price span{
	font-size: 30rpx;
	color: #ff7500;
}

