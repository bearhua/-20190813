.chating-wrapper {
  width: 100%;
  min-height: 100%;
  position: relative;
  /* margin: 70rpx 0 100rpx; */
  box-sizing: border-box;
  /* overflow: hidden; */
  background: #f6f6f6;
}
/* 收起键盘热区 */
.fold-keyboad-wrapper {
  position: fixed;
  top: 70rpx;
  width: 100%;
  height: 500rpx;
}
/*历史消息  */
.chating-history {
  position: fixed;
  padding: 0 20rpx;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  border: 1px solid #E7E7E7;
  background-color: #E7E7E7;
  z-index: 1;
  color: #888888;
  font-size: 30rpx;
}
.chating-history-left {
  float: left;
  color: #666;
}
.chating-history-right {
  float: right;
}
/*聊天输入框  */
.chatinput-wrapper {
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
}
.chatinput-content {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 22rpx;
}
.chatinput-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  margin: 20rpx 18rpx;
  display: inline-block;
}
.chatinput-img.emoji{
  margin-right: 0;
}
.chatinput-img:active {
  opacity: .6;
}
 .chatinput-input {
  min-width: 430rpx;
  min-height: 60rpx;
  border-radius: 60rpx;
  border: none;
  margin-top: 20rpx;
  display: inline-block;
  vertical-align: top;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #888888;
  background: #f0f0f0;
}
.chatinput-voice-mask {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  border-radius: 60rpx;
  margin-top: 20rpx;
  vertical-align:top;
  box-sizing:border-box;
  /* padding-left: 20rpx; */
  font-size: 28rpx;
  text-align: center;
  color: #888888;
  background-color: #f0f0f0;
  letter-spacing: 2rpx;
}
.chatinput-voice-mask-hover {
  background-color: #b1b1b1;
  color: #ffffff;
}
/*subcontent wrapper  */
.chatinput-subcontent {
 width: 100%;
 height: 470rpx;
 background-color: #999;
}
.fr {
  float: right;
}
/* more-subcontent */
.more-subcontent {
  padding: 44rpx  0 0 30rpx;
  border-top: 1rpx solid #d9d9d9;
  /* border:2rpx solid #ccc; */
  background: #f6f6f6;
}
.more-subcontent .more-subcontent-item {
  display:flex;
  flex-direction:column;
  margin-left: 40rpx;
  margin-bottom: 38rpx;
}
.more-subcontent .more-subcontent-item .image {
  width: 132rpx;
  height: 132rpx;
  margin-bottom: 20rpx;
}
.more-subcontent .more-subcontent-item:first-child{
  margin-left: 0
}

.more-subcontent .more-subcontent-item .text {
  font-size: 24rpx;
  text-align:center;
  color: #666666;
}
/*聊天记录  */
.record-wrapper {
  width: 100%;
  padding-bottom: 100rpx;
  padding-top:80rpx;
}
.record-chatting-item {
  width: 100%;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}
.record-item-time-wrapper {
  display:flex;
  flex-direction:row;
  justify-content:center;
}
.record-item-time {
  /* padding:4rpx 10rpx; */
  /* background: #D6D6D6; */
  /* border-radius: 8rpx; */
  font-size: 20rpx;
  color: #888888;
}
.record-chatting-item-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  display: inline-block;
}

.record-chatting-item-text {
  max-width: 570rpx;
  border-radius: 8rpx;
  background-color: #00aeea;
  padding: 16rpx 18rpx;
  box-sizing:border-box;
  word-wrap:break-word;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 40rpx;
}
.record-chatting-item-text.nobg {
  background: transparent;
  margin-left: 20rpx;
  margin-right: 20rpx;

  padding: 0;
}
/* tip消息富文本 */
.tip-rich-text {
  background-color:#ccc;
  text-align:center;
  align-self:center;
  min-height:40rpx;
  word-break:break-word;
  font-size:26rpx;
  padding:0 20rpx;
  color:#000;
  border-radius: 10rpx;
}

.self {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #fff;
}
.other {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  color: #222;
}
